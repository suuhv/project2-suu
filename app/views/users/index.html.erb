<% provide :title, t(".all_user") %>
<h1><%= t ".all_user" %></h1>

<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= image_tag user.avatar, size: Settings.user.avt_size_50 %>
      <%= link_to user.name, user %>
    </li>
  <% end %>
  <%= paginate @users, theme: "twitter-bootstrap-3" %>
</ul>
