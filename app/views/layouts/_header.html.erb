<header class="navbar navbar-default navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <%= link_to t(".mlog"), root_path, class: "logo" %>
      <div class="input-group stylish-input-group">
        <%= form_tag posts_path, method: :get do %>
          <%= text_field_tag :q, params[:q], placeholder: "Search",
            class: "form-control" %>
        <% end %>
      </div>
    </div>
    <div class="collapse navbar-collapse" id="navbar-collapse-2">
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li>
            <%= link_to root_path do %>
              <span class="glyphicon glyphicon-home"></span>
              <%= t ".home" %>
            <% end %>
          </li>
          <li>
            <%= link_to help_path do %>
              <span class="glyphicon glyphicon-question-sign"></span>
              <%= t ".help" %>
            <% end %>
          </li>
          <li>
            <%= link_to users_path do %>
              <span class="glyphicon glyphicon-briefcase"></span>
              <%= t ".user" %>
            <% end %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t ".account" %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to user_path(current_user) do %>
                  <span class="glyphicon glyphicon-user"></span>
                  <%= t ".profile" %>
                <% end %>
              </li>
              <li>
                <%= link_to edit_user_registration_path do %>
                  <span class="glyphicon glyphicon-cog"></span>
                  <%= t ".setting" %>
                <% end %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to signout_path, method: :delete do %>
                  <span class="glyphicon glyphicon-off"></span>
                  <%= t ".logout" %>
                <% end %>
              </li>
            </ul>
          </li>
        <% else %>
          <ul class="nav navbar-nav navbar-right">
            <li>
              <%= link_to t(".signup"), signup_path,
                class: "btn btn-default btn-outline btn-circle collapsed" %>
            </li>
            <li>
              <%= link_to t(".signin"), login_path,
                class: "btn btn-default btn-outline btn-circle collapsed" %>
            </li>
          </ul>
        <% end %>
      </ul>
    </div>
  </div>
</header>
