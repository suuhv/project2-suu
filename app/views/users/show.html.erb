<% provide :title, @user.name %>
<div class="row">
  <div class="col-md-4">
    <div class="user_info col-md-12">
      <div class="col-md-6">
        <%= image_tag @user.avatar, size: Settings.user.avt_size_150 %>
      </div>
      <div class="col-md-6">
        <h1><%= @user.name %></h1>
      </div>
    </div>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </div>
  <div class="col-md-8">
    <%= render "follow_form" if user_signed_in? %>
    <% if @user.posts.any? %>
      <h3><%= t ".post" %>(<%= @user.posts.size %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
    <% end %>
    <%= paginate @posts, theme: "twitter-bootstrap-3" %>
  </div>
</div>
