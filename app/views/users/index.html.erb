<% provide :title, t(".all_user") %>
<h1><%= t ".all_user" %>(<%= @total %>)</h1>

<ul class="users">
  <table class="table table-hover">
    <thead>
      <tr>
        <th><%= t ".avatar" %></th>
        <th><%= t ".name" %></th>
        <th><%= t ".post" %></th>
        <% if current_user.is_admin? %>
          <th><%= t ".email" %></th>
          <th><%= t ".delete" %></th>
        <% end %>
      </tr>
    </thead>
    <% @users.each do |user| %>
        <%= render "user", user: user %>
    <% end %>
  </table>
  <%= paginate @users, theme: "twitter-bootstrap-3" %>
</ul>
