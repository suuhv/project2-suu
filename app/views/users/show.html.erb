<% provide :title, @user.name %>
<div class="row">
  <div class="col-md-4">
    <%= render "shared/user_info" %>
    <section class="stats">
      <%= render "shared/stats" %>
    </section>
  </div>
  <div class="col-md-8">
    <% if @user.posts.any? %>
      <h3><%= t ".post" %>(<%= @user.posts.size %>)</h3>
      <ol class="microposts">
        <%= render @posts %>
      </ol>
    <% end %>
    <%= paginate @posts, theme: "twitter-bootstrap-3" %>
  </div>
</div>
