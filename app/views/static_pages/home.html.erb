<% provide :title, t(".home") %>
<% if user_signed_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/post_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t ".micropost_feed" %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="row jumbotron">
    <div class="center">
      <h1><%= t ".welcome" %></h1>
      <h2>
        <%= t ".it_free" %>
      </h2>
      <%= link_to t(".signup"), signup_path, class: "btn btn-lg btn-primary" %>
      <p> <%= t ".or" %> </p>
      <%= link_to t(".login"), login_path, class: "btn btn-lg btn-primary" %>
    </div>
  </div>
<% end %>
